<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="60dp"
    android:minWidth="240dp"
    android:clickable="true"
    android:paddingBottom="8dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="8dp"
    android:id="@+id/goal_fab.sheet.layout">

    <RelativeLayout
        android:id="@+id/goal_fab.sheet_list.icon.layout"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/goal_fab.sheet_list.icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/bg_pattern_1"
            app:civ_border="false"
            app:civ_shadow="false"
            />

    </RelativeLayout>

    <TextView
        android:id="@+id/goal_fab.sheet_list.text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@id/goal_fab.sheet_list.icon.layout"
        android:textColor="#000000"
        android:text="NO_DATA" />

</RelativeLayout>